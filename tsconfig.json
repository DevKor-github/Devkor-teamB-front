{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@navigator/*": ["./src/navigator/*"],
      "typeRoots": [
        "./src/types"
      ],
    },
  },
}